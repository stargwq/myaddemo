<h1>广告列表页</h1>


<table class="table table-striped table-bordered">
  <tr>
    <th>标题</th>
    <th>修改</th>
    <th>删除</th>
    <th>创建时间</th>
  </tr>


<div>
  <% @advertises.each do |item| %>
    <tr>
      <td><%= link_to item.title, advertise_path(item) %></td>
      <td><%= link_to '编辑', edit_advertise_path(item) %></td>
      <td><%= link_to '删除',item,method: :delete, data: { confirm: '你确定要删除吗?' } %></td>
      <td><%= item.time.nil? ? ""  : Time.at(item.time).strftime("%Y-%m-%d %H:%M") %></td>
    </tr>


  <% end %>

</div>
</table>
<br>
<a href="/advertises/new" class="btn btn-info pull-left" style="margin-top: 10px">添加</a>
